	<RecipeDef>
		<defName>Make_Pickles</defName>
		<label>Make Pickled cucumbers</label>
		<description>Salt the cucumbers and roll them into jars. Produces 3.</description>
		<jobString>Brewing batch of wort.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>          
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawPickles</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Salt</li>
					</thingDefs>
				</filter>
				<count>0.02</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Emptyjar</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawPickles</li>
				<li>Salt</li>
				<li>Emptyjar</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PicklesV>15</PicklesV>
		</products>
		<workSkill>Cooking</workSkill>
		<recipeUsers>
			<li>ElectricStove</li>
			<li>FueledStove</li>
			<li>ElectricStove_Pro</li>
		</recipeUsers>
		<researchPrerequisite>Food_B1</researchPrerequisite>
	</RecipeDef>
	
	
	
